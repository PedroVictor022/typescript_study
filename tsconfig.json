{
  "compilerOptions": {
    "target": "es2016",  
    "lib": ["ES2016", "DOM", "ESNext", "DOM.Iterable"],  
    "module": "commonjs",  
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,      
    "strict": true,    
    "skipLibCheck": true   ,
    "outDir": "dist",
    "watch": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ]
}
